USE PlantAndHealth;

/*INFORMACOES BASICAS DO NEGOCIO*/

-- Numeros de movimentos dE vendas (10001) Ou seja cada venda correpondeu a um detalhes
SELECT COUNT(*) FROM VENTAS;
SELECT COUNT(*) FROM DETALLE_VENTA;

--INICIO DA ATIVIDADE (1/01/2025 - 31/12/2015) UM ANO DE NEGOCIO
SELECT MIN(FECHA), MAX(FECHA) FROM VENTAS;

-- NUMEROS DE FAMILIAS DE PRODUTOS NO PORTIFOLIO (37 FAMILIAS DE PRODUTOS)
SELECT COUNT(DISTINCT(FAMILIA) ) FROM ARTICULOS; 

-- NUMEROS DE PRODUTOS NO PORTIFOLIO (47 PRODUTOS UNICOS)
SELECT COUNT(DISTINCT(CODIGO_PRODUCTO) ) FROM ARTICULOS; 

/*
DESCRICAO DE CLIENTES
UM DETALHE IMPORTANTE SOBRE CLIENTE E QUE ELE PODE ESTAR INSCRITO EM 1 OU MAS FILIAL
OU SEJA ELE FAZ COMPRAS NA COMUNIDADE QUE ESTIVER MAS PERTO DELE NO MOMENTO
*/
SELECT * FROM CLIENTES;

-- VERIFICAR MOVIMENTOS DOS CLIENTE
SELECT 
	ID_CLIENTE,
	SUCURSAL_ID
FROM VENTAS
ORDER BY ID_CLIENTE DESC;

-- DADOS DE VENDEDORES
SELECT * FROM VENDEDORES;

-- DADOS DE PRODUTOS
SELECT * FROM ARTICULOS;

/* 
DESCRICAO TABELAS DE VENDAS
DADOS DE FATURA CODIGO CLIENTE, TIPO DE VENDAS, CODIGO VENDEDOR , ID FILIAL , OUTROS DADOS REFERENTES AO PAGAMENTO
*/
SELECT * FROM VENTAS;

-- VERIFICA SE EXISTE OUTROS TIPOS DE VENDAS ALEM DE FATURA
SELECT 
DISTINCT(TIPO_DOCUMENTO) 
FROM 
VENTAS

/* 
DESCRICAO DE DETALHES DE VENDAS
ESSA TABELA CONTEM DETALHAMENTO DE VENDAS ID_PRODUTO, QUANTIDADE, PRECO , TOTAL E DADOS DE FATURA DE VENDAS
*/
SELECT * FROM DETALLE_VENTA

/*
Descricao de TABELA surcusal:
sucursal ou filial. Ambas as palavras são usadas para se referir a um estabelecimento
comercial ou industrial que depende economicamente de um órgão principal, como uma empresa matriz. 
NESSE CASO AS VENDAS SAO FEITAS PARA UM FILIAL QUE APÓS ESTES REVENDEM AOS SEUS CLIENTES E CADA FILIAL
PERTENCE A UMA OU MAIS COMUNIDADE E CADA COMUNIDADE PERTENCE UMA PROVINCIA E CADA PRENCIA A UMA REGIAO
*/
SELECT * FROM SUCURSAL;

-- DESCRICAO DE COMUNIDADE (ONDE A FILIAL ESTA INSERIDA)
SELECT * FROM COMUNA;

-- DESCRICAO PROVINCIA (ONDE A COMUNIDADE ESTA INSERIDA)
SELECT * FROM PROVINCIA;

-- DESCRICAO REGIAO (ONDE A PROVINCIA ESTA INSERIDA)
SELECT * FROM REGION;